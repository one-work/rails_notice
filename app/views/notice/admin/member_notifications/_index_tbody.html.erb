<td>
  <p><%= model.member.name %></p>
</td>
<td>
  <p><%= link_to model.title, { action: 'show', id: model.id }, text: true %></p>
  <p><%= model.body %></p>
  <p><%= model.link %></p>
</td>
<td>
  <p><%= model.notifiable_type_i18n %></p>
  <p><%= model.notifiable_id %></p>
</td>
<td>
  <p><%= model.sender_type %></p>
  <p><%= model.sender_id %></p>
</td>
<td>
  <p><%= model.linked_type %></p>
  <p><%= model.linked_id %></p>
</td>
<td>
  <p><time data-controller="time" class="has-text-gray"><%= model.created_at.to_formatted_s(:iso8601) %></time></p>
  <p><time data-controller="time" class="text-primary"><%= model.read_at.to_formatted_s(:iso8601) if model.read_at.present? %></time></p>
</td>
<td>
  <p><%= model.official %></p>
</td>
<td>
  <div data-show-target="item" class="visibility-hidden">
    <%= button_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'pencil', class: 'icon text-link' %>
    <% end %>
  </div>
  <div data-show-target="item" class="visibility-hidden">
    <%= button_to({ action: 'push', id: model.id }, method: :patch, data: { turbo_confirm: t('.push.confirm') }, class: 'button is-small is-borderless') do %>
      <i class="fa-solid fa-plane text-success"></i>
      <span class="ml-1">推送</span>
    <% end %>
    <%= button_to({ action: 'email', id: model.id }, method: :patch, data: { turbo_confirm: t('.email.confirm') }, class: 'button is-small is-borderless') do %>
      <i class="fa-solid fa-envelope text-primary"></i>
      <span class="ml-1">Email</span>
    <% end %>
  </div>
</td>