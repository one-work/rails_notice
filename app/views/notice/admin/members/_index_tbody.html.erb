<td>
  <p><%= model.name %></p>
  <p class="text-grey"><%= model.identity %></p>
</td>
<td><%= model.showtime %></td>
<td>
  <%= form_with theme: 'switch', model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :accept_email, data: { action: 'input#submit' }, id: nil %>
  <% end %>
</td>
<td>
<% model.notifiable_types.each do |notifiable_type| %>
  <p><span class="tag"><%= notifiable_type %></span></p>
<% end %>
</td>
<td><pre><%= model.counters.to_format_yaml %></pre></td>
<td></td>